root = true

[*.{py,pyi}]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.{yml,yaml}]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.{json,toml}]
charset = utf-8
end_of_line = lf
indent_size = 2
insert_final_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.{md,txt}]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
